<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".interfaz_principal"
    android:background="@drawable/inicio">


    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="42dp"
        android:fontFamily="serif"
        android:text="Bienvenido a Joyeria Larin"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#B2FFFFFF"
        android:textColorLink="#F1E7E7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtProdN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="54dp"
        android:layout_toEndOf="@+id/btnimgProdN"
        android:text="Agregar Nuevo producto"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtVerProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="54dp"
        android:layout_toEndOf="@+id/btnimgProdN"
        android:text="Ver lista de Productos"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tstmensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="54dp"
        android:layout_toEndOf="@+id/btnimgUsuariochat"
        android:text="Chat con nosotros"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUsuarioN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="607dp"
        android:layout_marginEnd="54dp"
        android:layout_toEndOf="@+id/imgUsuarioNuevo"
        android:text="iniciar Seccion"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnimgProdN"
        android:layout_width="86dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/nuevoproducto"
        android:scaleType="centerCrop"
        android:text=""/>

    <Button
        android:id="@+id/btnimgVerProd"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_below="@+id/btnimgProdN"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/portapapeles"
        android:text=""/>



    <Button
        android:id="@+id/btnimgUsuariochat"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_below="@+id/btnimgVerProd"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/usuario"
        android:scaleType="centerCrop"
        android:text=""/>

    <Button
        android:id="@+id/imgUsuarioNuevo"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_below="@+id/btnimgUsuariochat"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/registrase"
        android:scaleType="centerCrop"
        android:text=""/>

</RelativeLayout>

